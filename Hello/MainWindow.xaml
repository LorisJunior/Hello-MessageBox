<Window x:Class="Hello.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hello"
        mc:Ignorable="d"
        Title="Hello" Height="254" Width="454">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="80,64,0,0" Text="Please enter your name" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="24"/>
        <TextBox x:Name="userName" HorizontalAlignment="Left" Margin="80,112,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="248"/>
        <Button Content="OK" HorizontalAlignment="Left" Margin="360,110,0,0" VerticalAlignment="Top" Width="40" Click="okClick"/>

    </Grid>
</Window>
